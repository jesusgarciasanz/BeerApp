<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    app:cardCornerRadius="20dp"
    app:contentPadding="4dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/search_card_image"
            android:layout_width="25dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/search_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/search_card_image"
            android:layout_toRightOf="@id/search_card_image"
            android:fontFamily="@font/roboto_bold"
            android:text="Estrella Galicia"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/search_card_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_card_name"
            android:layout_toRightOf="@id/search_card_image"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sample_tagline" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>